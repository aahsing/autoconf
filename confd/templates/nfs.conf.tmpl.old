{{range $dir := lsdir "/services/nfs" -}}
  {{$pathdir := printf "/services/nfs/%s/path" $dir -}}
  {{$fsiddir := printf "/services/nfs/%s/fsid" $dir -}}
  {{$rwhosts := printf "/services/nfs/%s/rwhosts" $dir -}}
  {{$rohosts := printf "/services/nfs/%s/rohosts" $dir -}}
  {{$writemode := printf "/services/nfs/%s/writemode" $dir -}}
  {{$rootsquash := printf "/services/nfs/%s/rootsquash" $dir -}}
  {{$rwhostsv := getv $rwhosts -}}
  {{$pathdirv := getv $pathdir -}}
  {{$fsiddirv := getv $fsiddir -}}
  {{$rohostsv := getv $rohosts -}}
  {{$writemodev := getv $writemode -}}
  {{$rootsquashv := getv $rootsquash -}}
  {{$pathdirv}}
  {{if ne $rwhostsv "" -}}
    {{$rwhostsl := split $rwhostsv ";" -}}
    {{range $rwhost := $rwhostsl -}}
      {{$rwhost}}(fsid={{$fsiddirv}},{{$writemodev}},rw,{{$rootsquashv}}) 
    {{end -}}
  {{end -}}
  {{$pathdirv}} {{if ne $rwhostsv ""}} {{$rwhostsv}}(fsid={{$fsiddirv}},{{$writemodev}},rw,{{$rootsquashv}}) {{end}} {{if ne $rohostsv ""}} {{$rohostsv}}(fsid={{$fsiddirv}},{{$writemodev}},ro,{{$rootsquashv}}) {{end}}
{{end -}}
